<div {{bind-attr class="responsive:table-responsive"}}>
    <table {{bind-attr class=":table :table-component hoverable:table-hoverable striped:table-striped bordered:table-bordered condensed:table-condensed"}}>
        {{#if showHeader}}
            <thead>
            <tr>
                {{#each col in _columns}}
                    <th class="table-component-header" {{bind-attr width=col.columnWidth}}>
                        {{#if col.headerCellCustomViewClass}}
                            {{view col.headerCellCustomViewClass config=col}}
                        {{else}}
                            {{#if col.sortable}}
                                <button {{action 'sortTable' col.cellValuePath}} class="table-component-header-sortable-btn">
                                    <div class="table-component-header-name">
                                        <span>
                                            {{col.headerCellName}}
                                            &nbsp;
                                            {{tableComponentSortIcon col sortProperty sortAscending}}
                                        </span>
                                    </div>
                                </button>
                            {{else}}
                                <div class="table-component-header-name">{{col.headerCellName}}</div>
                            {{/if}}
                        {{/if}}
                    </th>
                {{/each}}
            </tr>
            </thead>
        {{/if}}
        <tbody>
        {{#each row in _rows}}
            <tr>
                {{#each col in _columns}}
                    {{#if col.cellCustomViewClass}}
                        {{view col.cellCustomViewClass row=row config=col}}
                    {{else}}
                        {{tableComponentCell row col}}
                    {{/if}}
                {{/each}}
            </tr>
            {{#if hasDetailRows}}
                <tr class='table-component-detail-row collapse'>
                    <td {{bind-attr colspan=_numColumns}}>
                        <div class="table-component-detail-container">
                            {{#if detailRowViewClass}}
                                {{view detailRowViewClass row=row}}
                            {{/if}}
                        </div>
                    </td>
                </tr>
            {{/if}}
        {{/each}}
        </tbody>
    </table>
</div>